# TO create syslink to zathura config file
# ln -sf ~/.cache/wal/zathurarc ~/.config/zathura/zathurarc

set recolor "true"

set completion-bg "{background}"
set completion-fg "{foreground}"
set completion-group-bg "{background}"
set completion-group-fg "{color2}"
set completion-highlight-bg "{foreground}"
set completion-highlight-fg "{color1}"

set recolor-lightcolor "{background}"
set recolor-darkcolor "{foreground}"
set default-bg "{color8}"

set inputbar-bg "{color8}"
set inputbar-fg "{foreground}"
set notification-bg "{color3}"
set notification-fg "{foreground}"
set notification-error-bg "{color2}"
set notification-error-fg "{foreground}"
set notification-warning-bg "{color4}"
set notification-warning-fg "{foreground}"
set statusbar-bg "{color4}"
set statusbar-fg "{foreground}"
set index-bg "{background}"
set index-fg "{foreground}"
set index-active-bg "{foreground}"
set index-active-fg "{background}"
set render-loading-bg "{background}"
set render-loading-fg "{foreground}"

set recolor-keephue "true"
# Open document in fit-width mode by default
set adjust-open "fit-width"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 50

#zoom settings
set zoom-min 10
# set guioptions ""

set window-title-home-tilde true
set statusbar-basename true
set selection-clipboard clipboard
set render-loading "false"

unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
map D set "first-page-column 1:1"
map <C-d> set "first-page-column 1:2"
map <C-i> recolor
